<odoo>
    <template id="inventory_movement_template">
        <t t-call="website.layout">
            <div class="container">
                <h1>Inventory movement</h1>
                <t t-if="movement">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Source Location</th>
                                <th>Destination Location</th>
                                <th>Movement Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="movement" t-as="movement">
                                <tr>
                                    <td>
                                        <t t-esc="movement.product_id.name"/>
                                    </td>
                                    <td>
                                        <t t-esc="movement.quantity"/>
                                    </td>
                                    <td>
                                        <t t-esc="movement.source_location_id.name"/>
                                    </td>
                                    <td>
                                        <t t-esc="movement.destination_location_id.name"/>
                                    </td>
                                    <td>
                                        <t t-esc="movement.movement_date"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </t>
                <t t-else="">
                    <p>No items found.</p>
                </t>
            </div>
        </t>
    </template>
</odoo>
