<odoo>
    <template id="inventory_location_template">
        <t t-call="website.layout">
            <div class="container">
                <h1>Inventory location</h1>
                <t t-if="location">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Location Name</th>
                                <th>Address</th>
                                <th>Capacity</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="location" t-as="location">
                                <tr>
                                    <td>
                                        <t t-esc="location.name"/>
                                    </td>
                                    <td>
                                        <t t-esc="location.address"/>
                                    </td>
                                    <td>
                                        <t t-esc="location.capacity"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </t>
                <t t-else="">
                    <p>No items found.</p>
                </t>
            </div>
        </t>
    </template>
</odoo>
