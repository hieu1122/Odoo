<odoo>
    <template id="inventory_item_template">
        <t t-call="website.layout">
            <div class="container">
                <h1>Inventory Items</h1>
                <t t-if="items">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Item Name</th>
                                <th>Description</th>
                                <th>Quantity</th>
                                <th>Unit of Measure</th>
                                <th>Reorder Level</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="items" t-as="item">
                                <tr>
                                    <td><t t-esc="item.name"/></td>
                                    <td><t t-esc="item.description"/></td>
                                    <td><t t-esc="item.quantity"/></td>
                                    <td><t t-esc="item.unit_of_measure"/></td>
                                    <td><t t-esc="item.reorder_level"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </t>
                <t t-else="">
                    <p>No items found.</p>
                </t>
            </div>
        </t>
    </template>
</odoo>
