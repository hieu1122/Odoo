<odoo>
    <!-- Record rule for Inventory Item -->
    <record id="inventory_management_item_rule_user" model="ir.rule">
        <field name="name">Inventory Item User Rule</field>
        <field name="model_id" ref="model_inventory_item"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_inventory_management_user'))]"/>
    </record>

    <record id="inventory_management_item_rule_manager" model="ir.rule">
        <field name="name">Inventory Item Manager Rule</field>
        <field name="model_id" ref="model_inventory_item"/>
        <field name="domain_force">[]</field>
        <field name="groups" eval="[(4, ref('group_inventory_management_manager'))]"/>
    </record>

    <!-- Record rule for Inventory Location -->
    <record id="inventory_management_location_rule_user" model="ir.rule">
        <field name="name">Inventory Location User Rule</field>
        <field name="model_id" ref="model_inventory_location"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_inventory_management_user'))]"/>
    </record>

    <record id="inventory_management_location_rule_manager" model="ir.rule">
        <field name="name">Inventory Location Manager Rule</field>
        <field name="model_id" ref="model_inventory_location"/>
        <field name="domain_force">[]</field>
        <field name="groups" eval="[(4, ref('group_inventory_management_manager'))]"/>
    </record>

    <!-- Record rule for Inventory Movement -->
    <record id="inventory_management_movement_rule_user" model="ir.rule">
        <field name="name">Inventory Movement User Rule</field>
        <field name="model_id" ref="model_inventory_movement"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_inventory_management_user'))]"/>
    </record>

    <record id="inventory_management_movement_rule_manager" model="ir.rule">
        <field name="name">Inventory Movement Manager Rule</field>
        <field name="model_id" ref="model_inventory_movement"/>
        <field name="domain_force">[]</field>
        <field name="groups" eval="[(4, ref('group_inventory_management_manager'))]"/>
    </record>
</odoo>

