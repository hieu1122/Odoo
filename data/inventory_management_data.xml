<odoo>
    <data noupdate="1">
        <!-- Sample data for Inventory Items -->
        <record id="inventory_item_laptop" model="inventory.item">
            <field name="name">Laptop</field>
            <field name="description">A personal computer that is portable and suitable for use while traveling.</field>
            <field name="quantity" eval="50"/>
            <field name="unit_of_measure">pcs</field>
            <field name="reorder_level" eval="10"/>
        </record>

        <record id="inventory_item_smartphone" model="inventory.item">
            <field name="name">Smartphone</field>
            <field name="description">A handheld personal computer that can make phone calls.</field>
            <field name="quantity" eval="100"/>
            <field name="unit_of_measure">pcs</field>
            <field name="reorder_level" eval="20"/>
        </record>

        <record id="inventory_item_tablet" model="inventory.item">
            <field name="name">Tablet</field>
            <field name="description">A portable touchscreen computer.</field>
            <field name="quantity" eval="30"/>
            <field name="unit_of_measure">pcs</field>
            <field name="reorder_level" eval="15"/>
        </record>

        <!-- Sample data for Inventory Locations -->
        <record id="inventory_location_warehouse" model="inventory.location">
            <field name="name">Main Warehouse</field>
            <field name="address">123 Warehouse St, City, Country</field>
            <field name="capacity" eval="1000"/>
        </record>

        <record id="inventory_location_store" model="inventory.location">
            <field name="name">Main Store</field>
            <field name="address">456 Store Ave, City, Country</field>
            <field name="capacity" eval="500"/>
        </record>

        <record id="inventory_location_office" model="inventory.location">
            <field name="name">Office Storage</field>
            <field name="address">789 Office Blvd, City, Country</field>
            <field name="capacity" eval="200"/>
        </record>


    </data>
</odoo>
